<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>

<body>
    <h1><%= title %></h1>
    <% if (locals.errors) { %>
        <ul>
            <% errors.forEach(function(error) { %>
                <li><%= error.msg %></li>
            <% }); %>
        </ul>
    <% } %>
    <form method="POST" action="">
        <label for="name">Category Name:</label>
        <input type="text" id="name" name="name" value="<%= locals.category ? category.name : '' %>" required maxlength="100">
        <button type="submit"><%= title %></button>
    </form>
</body>

</html>
