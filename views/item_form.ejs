<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <form action="" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required maxlength="100" value='<%= (locals.item) ? item.name : "" %>'><br>

        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <% categories.forEach(category => { %>
                <option value="<%= category._id %>" <%= (locals.item) ? "selected" : "" %>><%= category.name %></option>
            <% }); %>
        </select><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required value='<%= (locals.item) ? item.price : "" %>'><br>

        <label for="numberInStock">Number in Stock:</label>
        <input type="number" id="numberInStock" name="numberInStock" required value='<%= (locals.item) ? item.numberInStock : "" %>'><br>

        <label for="expiryDate">Expiry Date:</label>
        <input type="date" id="expiryDate" name="expiryDate" value='<%= (locals.item) ? item.expiryDate.toISOString().split('T')[0] : "" %>'><br>

        <button type="submit">Submit</button>
    </form>
</body>
</html>
